<?xml version='1.0' ?>

<launch>
  <arg name="use_sim_time" default="false"/>

  <!-- Common launch -->
  <include file="$(find-pkg-share project)/common.launch.xml">
    <arg name="use_sim_time" value="$(var use_sim_time)"/>
    <arg name="viz_config_file" value ="$(find-pkg-share project)/include/roscon/roscon.rviz"/>
    <arg name="config_file" value="$(find-pkg-share project_maps)/roscon/roscon.building.yaml"/>
    <arg name="use_reservation_node" value="true"/>
  </include>

  <!-- TinyRobot fleet adapter -->
  <group>
    <include file="$(find-pkg-share project_fleet_adapter)/launch/fleet_adapter.launch.xml">
      <arg name="use_sim_time" value="$(var use_sim_time)"/>
      <arg name="nav_graph_file" value="$(find-pkg-share project_maps)/maps/roscon/nav_graphs/0.yaml" />
      <arg name="config_file" value="$(find-pkg-share project_config)/config/roscon/tinyRobot_config.yaml"/>
    </include>
  </group>

</launch>
